<%= render partial: 'shares/bar_menu' %>
<h2 class="each-category"><%= "#{@tag.text}生産農園一覧" %></h2>

<div class="main">
<div class="side-bar">
<h4 class="category-title">品目別農園カテゴリー<h4>
<ul class="category-lists">
<% @tags.each do |tag| %>
<li class="category-list"><%= link_to "#{tag.text}生産農園", tag_path(tag.id), class:"category-link" %></li>
<% end %>
</ul>
</div>

<div class="main-bar">
<h3>＜生産農園＞</h3>
<div class="main-bar-head">

<% @farms.each do |farm| %>
<div class="each-farm">
<%= farm.name %>
<%= link_to farm_path(farm), class:"each-farm-name" do %><br>
<%= image_tag farm.images.first, class:"farm-image" %><br>
＜生産品目＞<br>
<% farm.tags.each do |tag| %>
  <div class="each-farm-tag"><%= "#{tag.text} " %></div>
<% end %>
<% end %>
</div>
<% end %>
</div>
</div>
</div>