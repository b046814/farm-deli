<h1>生産者紹介</h1>
<div>
<%= @farm.name %>
</div>
<div>
<% if user_signed_in? %>
<% if current_user.already_favorite?(@farm) %>
  <%= link_to farm_favorite_path(@farm), class: "like-link", method: :delete do %>
  <i class="far fa-thumbs-up unlike-btn"></i>
  <% end %><%= @farm.favorites.count %>
<% else %>
  <%= link_to farm_favorites_path(@farm), class: "like-link", method: :post do %>
  <i class="far fa-thumbs-up like-btn"></i>
  <% end %><%= @farm.favorites.count %>
<% end %>
<%end%>
<% unless user_signed_in? %>
<%= button_to 'いいね', farm_favorites_path(@farm) %><%= @farm.favorites.count %>
<%end%>

</div>
<% if current_farmer == @farm.farmer %>
<%= link_to '紹介ページ編集', edit_farm_path(@farm.id) %>
<%= link_to '紹介ページ削除', farm_path(@farm), method: :delete %>
<% end %>
<div>生産品目
<div>
<% @farm_tags.each do |tag| %>
<%= "#{tag.text} " %>
<% end %> 
</div>
</div>
<div>
<%= "所在地: #{@farm.prefecture.name}" %>
</div>

<div>
<% i = 0 %>
  <% @farm.images.each do |image| %>
    <% if i != 0 %>
    <%= image_tag image.variant(resize:'300x400') %>
    <% else %>
    <%= image_tag image.variant(resize:'600x700') %>
    <% end %>
  <% i += 1 %>
  <% end %>
</div>
<h4>農園紹介</h4>
<div>
<%= @farm.description %>
</div>
<h4>ここがこだわり</h4>
<div>
<%= @farm.feature %>
</div>