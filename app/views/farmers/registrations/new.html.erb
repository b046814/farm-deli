<h2>Sign up</h2>
<p>有機農産物生産者様専用ユーザー登録ページ</p>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "farmers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname %><br>
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name, placeholder:"（例）山田"%>
  </div>

  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name, placeholder:"（例）太郎"%>
  </div>

  <div class="field">
    <%= f.label :last_name_kana %><br>
    <%= f.text_field :last_name_kana, placeholder:"（例）ヤマダ" %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana %><br>
    <%= f.text_field :first_name_kana, placeholder:"（例）タロウ" %>
  </div>
  
  <div class="field">
    <%= f.label :birth_date %><br>
    <%= f.date_select :birth_date, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10) %>
  </div>

  <div class="field">
    <%= f.label :organic, "有機農産物のみの販売に同意します" %>
    <%= f.check_box :organic, checked_value:"true", unchecked_value:"false" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "farmers/shared/links" %>
