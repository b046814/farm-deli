<%= render partial: 'shares/bar_menu_second' %>
<h2 class="sign-head">Sign up</h2>
<p class="sign-notice">生産者様専用登録ページ</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="error-messages">
  <%= render "farmers/shared/error_messages", resource: resource %>
  </div>
  <div class="box">
  <div class="box-inner">
  <div class="box-text">
    <%= f.label :nickname, "ニックネーム" %><b>  必須</b><br>
    <%= f.text_field :nickname, placeholder: '(例)山本tonyタカシ' %>
  </div>

  <div class="box-email">
    <%= f.label :email, 'メールアドレス' %><b>  必須</b><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'PC・携帯どちらでも可' %>
  </div>

  <div class="box-password">
    <%= f.label :password, 'パスワード' %><b>  必須</b>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: '半角英数字6文字以上' %>
  </div>

  <div class="box-password">
    <%= f.label :password_confirmation, 'パスワード(確認用)' %><b>  必須</b><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: '同じパスワードを入力して下さい' %>
  </div>

  <div class="box-text">
    <%= f.label :last_name, 'お名前(全角)'%><b>  必須</b><br>
    <%= f.text_field :last_name, placeholder:"（例）山田"%>
  </div>

  <div class="box-text">
    <%= f.label :first_name, 'お名前(全角)' %><b>  必須</b><br>
    <%= f.text_field :first_name, placeholder:"（例）太郎"%>
  </div>

  <div class="box-text">
    <%= f.label :last_name_kana, 'お名前カナ(全角)' %><b>  必須</b><br>
    <%= f.text_field :last_name_kana, placeholder:"（例）ヤマダ" %>
  </div>

  <div class="box-text">
    <%= f.label :first_name_kana, 'お名前カナ(全角)' %><b>  必須</b><br>
    <%= f.text_field :first_name_kana, placeholder:"（例）タロウ" %>
  </div>
  
  <div class="input-birth-wrap">
    <%= f.label :birth_date, '生年月日' %><b>  必須</b><br>
    <%= f.date_select :birth_date, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10) %>
  </div>

  <div class="box-text">
    <%= f.label :organic, "有機農産物のみの販売に同意します" %><b>  必須</b>
    <%= f.check_box :organic %>
  </div>

  <div class="box-submit">
    <%= f.submit "Sign up" %>
  </div>
  </div>
  </div>
<% end %>

