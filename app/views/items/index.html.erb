<%= render partial: 'shares/bar_menu' %>

<div class="top-image">
<%= image_tag "top.png", class:"top-image-png" %>
</div>

<div class="main">
<div class="side-bar">
<%= form_with(url: search_items_path, local: true, method: :get, class: 'search-form') do |form| %>
<%= form.label :keyword, "品目検索(全角カタカナ入力)", class:"search-label" %>
<%= form.text_field :keyword, placeholder:"(例)トマト", class:"search-input" %>
<%= form.submit "検索", class:"search-submit" %>
<% end %>
<h4 class="category-title">品目別農園カテゴリー<h4>
<ul class="category-lists">
<% @tags.each do |tag| %>
<li class="category-list"><%= link_to "#{tag.text}生産農園", tag_path(tag.id), class:"category-link" %></li>
<% end %>
</ul>
</div>

<div class="main-bar">
<h3>＜生産農園＞</h3>
<div class="main-bar-head">

<% @farms.each do |farm| %>
<div class="each-farm">
<%= farm.name %>
<%= link_to farm_path(farm), class:"each-farm-name" do %><br>
<%= image_tag farm.images.first, class:"farm-image" %><br>
＜生産品目＞<br>
<% farm.tags.each do |tag| %>
  <div class="each-farm-tag"><%= "#{tag.text} " %></div>
<% end %>
<% end %>
</div>
<% end %>
</div>

<h3>＜出品農産物＞</h3>
<div class="main-bar-bottom">
<% @items.each do |item| %>
<div class="each-item">
<%= link_to item_path(item) do %>
<%= image_tag item.image, class:"item-image" %><br>
<%= item.description %><br>
<%= item.prefecture.name %>産<%= "  #{item.price}" %>円<br>
<% end %>
</div>
<% end %>
</div>
</div>
</div>