<% if user_signed_in? %>
<% if current_user.already_favorite?(farm) %>
  <%= link_to farm_favorite_path(farm, current_user.id), class: "like-link", method: :delete, remote: true do %>
  <i class="far fa-thumbs-up unlike-btn"></i>
  <% end %><%= farm.favorites.count %>
<% else %>
  <%= link_to farm_favorites_path(farm), class: "like-link", method: :post, remote: true do %>
  <i class="far fa-thumbs-up like-btn"></i>
  <% end %><%= farm.favorites.count %>
<% end %>
<%end%>
